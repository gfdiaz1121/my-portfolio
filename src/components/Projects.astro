---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
// Astro icon is a raw SVG file in /public:
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";

// ðŸ”§ Types
type Tag =
  | { name: string; class: string; icon: any }         // component-based icon
  | { name: string; class: string; iconUrl: string };  // URL-based icon

type Project = {
  title: string;
  description: string;
  link?: string;
  github?: string;
  image: string;
  tags: Tag[];
};
import astroLogo from "./icons/Astro.svg";
// Tags
const TAGS = {
  NEXT: { name: "Next.js", class: "bg-black text-white", icon: NextJS } as Tag,
  TAILWIND: { name: "Tailwind CSS", class: "bg-[#003159] text-white", icon: Tailwind } as Tag,
  ASTRO: {
    name: "Astro",
    class: "bg-[#FF5A03] text-white",
    iconUrl: astroLogo.src
  } as Tag,
};

const PROJECTS: Project[] = [
  {
    title: "Chido BarberShop â€” Local Barbershop Template",
    description: "A sleek, responsive barbershop website template built with Astro, Tailwind, and Next.js.",
    link: "https://barber-templete.netlify.app/",
    github: "https://github.com/gfdiaz1121/barber-shop-templete",
    image: `${import.meta.env.BASE_URL}projects/barber.jpg`,
    tags: [TAGS.ASTRO, TAGS.TAILWIND],
  },
];
---

---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">

        <div class="w-full md:w-1/2">
          <div class="group relative flex flex-col items-center gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-hidden rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <!-- Use a responsive aspect box to keep layouts tidy -->
            <div class="w-full aspect-[4/3] sm:aspect-[3/2] md:aspect-[16/9]">
              <img
                alt="Barbershop template preview"
                src={image}
                loading="lazy"
                class="
                  w-full h-full
                  object-contain                     /* show whole image at all sizes */
                  transition-[transform,object-position,object-fit] duration-500
                  md:group-hover:scale-110           /* zoom on hover (md+) */
                  md:group-hover:object-cover        /* crop only while hovering (md+) */
                  md:object-center
                "
              />
            </div>
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">{title}</h3>

          <ul class="flex flex-row mt-2 mb-2 gap-x-2">
            {PROJECTS[0].tags.map((tag) => (
              <li>
                <span class={`flex items-center gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                  {("icon" in tag)
                    ? <tag.icon class="size-4" />
                    : <img src={tag.iconUrl} alt={`${tag.name} icon`} class="w-4 h-4" />}
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>


          <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>

          <footer class="flex items-end justify-start mt-4 gap-x-4">
            {github && (
              <LinkButton href={github}>
                <GitHub class="size-6" />
                Code
              </LinkButton>
            )}
            {link && (
              <LinkButton href={link}>
                <Link class="size-4" />
                Preview
              </LinkButton>
            )}
          </footer>
        </div>
      </article>
    ))
  }
</div>
